<h3>ブログ編集</h3>

<%= attachment_image_tag @blog, :image, :fill, 400, 350, format: 'jpeg' %>

<%= form_with model: @blog, url: admin_blog_update_path(@blog.id), local:true do |f| %>

<label for="inputBlog">投稿画像</label>
<%= f.attachment_field :image %>

<label for="inputTitle">タイトル</label>
<%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>

<label for="inputBody">行ったこと</label>
<%= f.text_area :body, autofocus: true, id:"inputTitle", placeholder:"説明"%>

<%= f.submit "変更を保存" %>

<% end %>
