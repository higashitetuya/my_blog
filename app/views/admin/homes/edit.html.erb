<h3>プロフィール編集</h3>

<%= form_with model: @admin, url: admin_update_path(current_admin), local:true do |f| %>

  <label for="inputBlog">プロフィール画像</label>
  <%= f.attachment_field :blog %>

  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>

  <label for="inputAge">年齢</label>
  <%= f.text_field :age, autofocus: true, id:"inputAge", placeholder:"年齢"%>

  <label for="inputBirthday">生年月日</label>
  <%= f.text_field :birthday, autofocus: true, id:"inputBirthday", placeholder:"生年月日"%>

  <label for="inputSign">星座</label>
  <%= f.text_field :sign, autofocus: true, id:"inputSign", placeholder:"星座"%>

  <label for="inputLocation">所在地</label>
  <%= f.text_field :location, autofocus: true, id:"inputLocation", placeholder:"所在地"%>

  <label for="inputHobby">趣味</label>
  <%= f.text_field :hobby, autofocus: true, id:"inputHobby", placeholder:"趣味"%>

  <label for="inputIntroduction">自己紹介</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>

  <%= f.submit "変更を保存" %>
<% end %>