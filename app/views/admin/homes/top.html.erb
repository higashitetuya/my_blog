<h3>マイページ</h3>

<%= attachment_image_tag @admin, :blog, :fill, 100, 100, format: 'jpeg' %>

<%= @admin.name %>

<%= @admin.age %>

<%= @admin.birthday %>

<%= @admin.sign %>

<%= @admin.location %>

<%= @admin.hobby %>

<%= @admin.introduction %>

<%= link_to "編集", admin_edit_path %>

<%= link_to "ブログ投稿", new_admin_blog_path %>

<h3>投稿一覧</h3>

<% @blogs.each do |blog| %>

<div>
  <%= attachment_image_tag blog, :image, :fill, 300, 250, format: 'jpeg' %>
  <p><%= blog.created_at.strftime('%Y/%m/%d') %></p>
  <p>タイトル：<%= link_to admin_blog_path(blog.id) do %><%= blog.title %><% end %></p>
</div>

<% end %>
